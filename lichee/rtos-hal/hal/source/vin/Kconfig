menu "VIN Devices"

config DRIVERS_VIN
    bool "enable vin driver"
    default n

config ENABLE_AIISP
    depends on DRIVERS_VIN
    bool "enable aiisp function"
    default n

if DRIVERS_VIN
choice
	depends on DRIVERS_VIN
	prompt "select isp work mode"
	default ISP_READ_THRESHOLD

config ISP_READ_THRESHOLD
	bool "read ae threshold from flash"

config ISP_FAST_CONVERGENCE
	bool "use HFR to make AE&AWB fast stability(HFR)"

config ISP_ONLY_HARD_LIGHTADC
	bool "use hard light_adc(GPADC)"

config ISP_HARD_LIGHTADC
	bool "use hard light_adc to make AE&AWB fast stability(GPADC&HFR)"
endchoice

config ISP_NUMBER
	int "isp support number"
	default 1
	range 1 3

config VIN_WAIT_AMP_INIT
	bool "wait amp init finish for vin can use amp"
	depends on DRIVERS_VIN
	default n

config VIN_CONTINUE_INIT_TRY_TIMES
	int "vin contiue init try times"
	depends on VIN_WAIT_AMP_INIT
	default 200

config VIN_WAIT_AMP_INIT_SEM_TIMEOUT
	int "wait rpbuf init finish for vin event timeout"
	depends on VIN_WAIT_AMP_INIT
	default 3000

config NOT_FRAME_LOSS
	bool "use vin not frame loss"
	depends on DRIVERS_VIN
	default n

config VIDEO_SUNXI_VIN_SPECIAL
	bool "car reverse function for vin"
	depends on DRIVERS_VIN
	default n

config VIDEO_SUNXI_VIN_SPECIAL_EVENT_TIMEOUT
	int "car reverse function for vin event timeout"
	depends on VIDEO_SUNXI_VIN_SPECIAL
	default 300

config ISP_MEMRESERVE_ADDR
	hex "buffer addr for isp dma reg use"
	depends on DRIVERS_VIN
	default 0x43000000

config ISP_MEMRESERVE_LEN
	hex "buffer len for isp dma reg use"
	depends on VIDEO_SUNXI_VIN_SPECIAL
	default 0x19000

menu "sensor driver select"
source "drivers/rtos-hal/hal/source/vin/modules/sensor/Kconfig"
endmenu

endif

endmenu
