;sunxi platform application
;---------------------------------------------------------------------------------------------------------
; 说明： 脚本中的字符串区分大小写，用户可以修改"="后面的数值，但是不要修改前面的字符串
; 描述gpio的形式：Port:端口+组内序号<功能分配><内部电阻状态><驱动能力><输出电平状态>
;---------------------------------------------------------------------------------------------------------

;---------------------------------------------------------------------------------
; version:版本1.00
; machine:板级文件名
;---------------------------------------------------------------------------------
[product]
version = "100"
machine = "evb1"

;----------------------------------------------------------------------------------
;uart configuration
;uart_debug_port  |Boot串口控制器编号        |
;uart_debug_tx       |Boot串口发送的GPIO配置|
;uart_debug_rx  |Boot串口接收的GPIO配置     |
;----------------------------------------------------------------------------------
[uart2]
uart_debug_tx   = port:PC00<2><1><default><default>
uart_debug_rx   = port:PC01<2><1><default><default>

;----------------------------------------------------------------------------------
;audiocodec configuration
;pb_audio_route		| 默认音频通路：0-lineout+spk; 1-headphone+spk; 2-lineout; |
;			| 3-headphone; 4-lineout+headphone; 5-lineout+headphone+spk|
;gpio-spk		| PA引脚的GPIO配置     |
;----------------------------------------------------------------------------------
[audiocodec]
used		= 0
digital_vol	= 0
hpout_vol	= 3
lineout_vol	= 25
mic1gain	= 19
mic2gain	= 19
mic3gain	= 0
lineingain	= 0
pa_msleep_time	= 50
pa_level	= 1
gpio-spk	= port:PD15<1><1><default><default>
adcdrc_cfg	= 0
adchpf_cfg	= 1
dacdrc_cfg	= 0
dachpf_cfg	= 0
pb_audio_route	= 0
rx_sync_en	= 0
rx_sync_ctl	= 0
hp_detect_used	= 0


[audio_hw_dsp]
pcm_pb_rate            = 48000
pcm_pb_channels        = 2
pcm_pb_bits            = 16
pcm_pb_period_size     = 960
pcm_pb_periods         = 4
pcm_pb_card            = "hw:audiocodec"

pcm_cap_rate            = 16000
pcm_cap_channels        = 3
pcm_cap_bits            = 16
pcm_cap_period_size     = 320
pcm_cap_periods         = 4
pcm_cap_card            = "hw:audiocodec"
